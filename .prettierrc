{
	"printWidth": 120,
	"tabWidth": 2,
	"useTabs": false,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "none",
	"singleAttributePerLine": true,
	"importOrder": [
		"^$app/(.*)$",
		"^$lib/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"plugins": [
		"prettier-plugin-svelte"
	],
	"pluginSearchDirs": [
		"."
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}